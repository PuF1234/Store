@model OrderModel
@{
    ViewData["Title"] = "Order is placed";
}

<p>
    Order is placed. We're starting to give your order to delivery company.
    Wait for SMS.
  
</p>

<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">№</th>
            <th scope="col">Producer</th>
            <th scope="col">Title</th>
            <th scope="col">Count</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Items.Length; i++)
        {
            <tr>
                <td class="text-right">@(i + 1)</td>
                <td>@Model.Items[i].Producer</td>
                <td>@Model.Items[i].Title</td>
                <td class="text-right">@Model.Items[i].Count</td>
                <td class="text-right">@Model.Items[i].Price</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total</td>
            <td class="text-right">@Model.TotalCount</td>
            <td class="text-right">@Model.TotalPrice</td>
        </tr>
    </tfoot>
</table>

<strong>Delivery</strong>
<pre>
    @Model.DeliveryDescription
</pre>

<strong>Payment</strong>
<pre>
    @Model.PaymentDescription
</pre>

<p>
    <a href="@Url.Action("Index", "Home")">To start page</a>
</p>