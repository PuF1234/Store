@model Bicycle

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>   
<p><strong>@Model.Producer</strong></p>
<p>@Model.Description</p>
<p>Price: <strong>@Model.Price</strong></p>
<form action="@Url.Action("Add", "Cart")" method="post">
    <input type="hidden" name="id" value="@Model.ID" />
    <button class="btn btn-outline-success" type="submit">In the cart</button>

</form>

